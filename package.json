{
  "name": "v2",
  "devDependencies": {
    "oxlint": "^1.1.0",
    "oxfmt": "^0.28.0",
    "typescript": "^5.8.0"
  },
  "private": true,
  "scripts": {
    "dev:client": "bun --cwd client dev",
    "dev:server": "bun --cwd server dev",
    "build:client": "bun --cwd client build",
    "build:server": "bun --cwd server deploy",
    "lint": "oxlint -c oxlint.json",
    "fmt": "oxfmt --write client server",
    "fmt:check": "oxfmt client server",
    "check": "bun run lint && bun run fmt:check"
  },
  "type": "module",
  "workspaces": ["client", "server"]
}
